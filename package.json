{
  "name": "regex-file-finder",
  "displayName": "Regex File Finder",
  "description": "正規表現パターンでファイル名を検索し、結果をツリービューで表示するVSCode拡張機能",
  "version": "0.2.0",
  "publisher": "ioel0xff",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ioEl0xFF/RegexFileFinder.git"
  },
  "bugs": {
    "url": "https://github.com/ioEl0xFF/RegexFileFinder/issues"
  },
  "homepage": "https://github.com/ioEl0xFF/RegexFileFinder#readme",
  "keywords": [
    "regex",
    "search",
    "file",
    "finder",
    "regular expression",
    "file search"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:regexFileFinder.search"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regexFileFinder.search",
        "title": "ファイル名を正規表現で検索",
        "category": "Regex File Finder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "regexFileFinder.results",
          "name": "正規表現検索結果"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  }
}
